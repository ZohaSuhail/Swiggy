{
    "builds": [
      {
        "src": "/**",
        "use": "@vercel/static"
      }
    ],
  
    "routes": [
      {
        "src": "/",
        "dest": "/index.html",
        "methods": ["GET"],
        "headers": {
          "Access-Control-Allow-Origin": "*"
        }
      },
      {
        "src": "/about",
        "dest": "/index.html",
        "methods": ["GET"],
        "headers": {
          "Access-Control-Allow-Origin": "*"
        }
      },
      {
        "src": "/contact",
        "dest": "/index.html",
        "methods": ["GET"],
        "headers": {
          "Access-Control-Allow-Origin": "*"
        }
      },
      {
        "src": "/cart",
        "dest": "/index.html",
        "methods": ["GET"],
        "headers": {
          "Access-Control-Allow-Origin": "*"
        }
      },
      {
        "src": "/restaurants/(.*)",
        "dest": "/index.html",
        "methods": ["GET"],
        "headers": {
          "Access-Control-Allow-Origin": "*"
        }
      },
      {
        "src": "/(.+)",
        "dest": "/$1",
        "methods": ["GET"],
        "headers": {
          "Access-Control-Allow-Origin": "*"
        }
      }
    ]
}